<%- include("../partials/head", { stylePag: "register" , title: "Editar Usuario" }) %>


  <body>
    <!-- Header - Inicio -->
    <%- include("../partials/header") %>
      <!-- Header - Fin-->

      <!--Contenido HTML de Registro - Inicio -->
      <main>
        <h3>Editar información de usuario</h3>
        <form class="formulario-registro" action="/users/?_method=PUT" method="POST" enctype="multipart/form-data">
          <input class="input" type="text" placeholder="Nombre" name="first_name" value="<%= user.first_name %>" required>
          <input class="input" type="text" placeholder="Apellido" name="last_name" value="<%= user.last_name %>" required>
          <input class="input" type="email" placeholder="Correo electrónico" name="email" value="<%= user.email %>" required>
          <input type="number" name="id" value="<%= user.id %>" style="display: none;">          
          <input class="input" type="password" placeholder="Contraseña" name="password">          
          <input class="input" type="number" placeholder="Número de teléfono" name="phone" value="<%= user.phone %>" required>
          <br>

          <div class="perfil-label">
            <label>Seleccione una imagen de perfil</label>
          </div>
          <div class="avatar">
            <input type="file" name="avatar" accept=".jpg,.png,.jpeg">
          </div>

          <div class="perfil-label">
            <label>Perfil del usuario</label>
          </div>
          <div class="perfil">
            <div>
              <input id="comprador" type="radio" name="userprofile" value="comprador" <%= user.userprofile == "comprador" ? "checked" : null %>>
              <label for="comprador">Comprador</label>
            </div>
            <div>
              <input id="vendedor" type="radio" name="userprofile" value="vendedor" <%= user.userprofile == "vendedor" ? "checked" : null %>>
              <label for="vendedor">Vendedor</label>
            </div>

          </div>
          <div class="pais">
            <label for="paises">Seleccione su pais </label>
            <select id="paises" name="country">
              <option value="arg" <%= user.country == "arg" ? "selected" : null %>>Argentina</option>
              <option value="bol" <%= user.country == "bol" ? "selected" : null %>>Bolivia</option>
              <option value="bra" <%= user.country == "bra" ? "selected" : null %>>Brasil</option>
              <option value="chi" <%= user.country == "chi" ? "selected" : null %>>Chile</option>
              <option value="col" <%= user.country == "col" ? "selected" : null %>>Colombia</option>
              <option value="ecu" <%= user.country == "ecu" ? "selected" : null %>>Ecuador</option>
              <option value="par" <%= user.country == "par" ? "selected" : null %>>Paraguay</option>
              <option value="per" <%= user.country == "per" ? "selected" : null %>>Perú</option>
              <option value="uru" <%= user.country == "uru" ? "selected" : null %>>Uruguay</option>
              <option value="ven" <%= user.country == "ven" ? "selected" : null %>>Venezuela</option>
            </select>
          </div>
          <input class="input" type="text" placeholder="Provincia / Región" name="region" value="<%= user.region %>" required>
          <input class="input" type="text" placeholder="Ciudad" name="city" value="<%= user.city %>" required>
          <input class="input" type="text" placeholder="Código postal" name="zip" value="<%= user.zip %>" required>
          <input class="input" type="text" placeholder="Dirección" name="address" value="<%= user.address %>" required>
          <div id="create-account-button">
            <button class="reset" type="reset">Borrar</button>
            <button type="submit">Editar</button>
          </div>
        </form>
      </main>
      <!--Contenido HTML del Registro - Fin -->

      <!-- Footer - Inicio -->
      <%- include("../partials/footer") %>
        <!-- Footer - Fin -->