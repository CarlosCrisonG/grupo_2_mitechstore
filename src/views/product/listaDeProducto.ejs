<%- include("../partials/head", { stylePag: "listaDeProducto" , title: "Lista de Producto - Mi Tech Store" }) %>

<body>
  <!-- Header - Inicio -->
  <%- include("../partials/header") %>
  <!-- Header - Fin-->

  <!-- Seccion de header -->
  <section>
    <div class="conteiner-h1">
      <h3>
        <%= locals.categoryQueryId && categoryQueryId ? headerCategories.find(category=> category.id ==
              categoryQueryId).name : "Todos los productos"%>
      </h3>
    </div>
  </section>

  <main>
    <!-- Seccion de producto -->
    <section class="productos">
      <!-- Productos -->
      <% products.forEach(product=> { %>
      <div class="conteiner-producto">
        <a class="enlace_producto" href="/product/detail/<%= product.id %>">
          <div class="conteiner-imagen-producto">
            <img src="/images/products/<%= product.images[0].name %>" alt="Redmi10">
          </div>

          <div class="titulo-producto">
            <h3>
              <%= product.name %>
            </h3>
          </div>

          <div class="precio-descuento">

            <div class="precio-producto">
              <span>$<%= product.price %></span>
            </div>
            <% if (product.discount> 0) { %>
            <div class="descuento-producto">
              <span>
                <%= product.discount %>% OFF
              </span>
            </div>
            <% } %>
          </div>

          <% if (locals.user && user.dataValues.userprofile_id !=1) { %>
          <div class="descripcion-producto">
            <a href="/admin/editproduct/<%= product.id %>"><button> Editar <i class="fa-regular fa-pen-to-square"></i> </button></a>
          </div>
          <% } %>
        </a>
      </div>
      <% }) %>
    </section>
  </main>

  <!-- Footer - Inicio -->
  <%- include("../partials/footer") %>
  <!-- Footer - Fin -->