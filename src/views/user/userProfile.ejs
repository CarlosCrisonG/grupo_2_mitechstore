<%- include("../partials/head", { stylePag: "userProfile" , title: "Perfil del usuario" }) %>

    <body>
        <%- include("../partials/header") %>
        <main>
            <div class="profile-container">
                <div class="user-container">
                   <div>
                        <img class="profile-picture" src="/images/avatars/defaultUser.jpg" alt="Foto de perfil de Jhon Doe">
                        <p class="user-name"><%= user.first_name %></p>
                        <p class="work-text"><%= user.last_name %></p>
                        <p class="address-text"><%= user.city %></p>
                        <div style="display: flex; justify-content: center;">
                            <button class="btn-update">Editar</button>
                        </div>
                   </div>
                </div>
                <div class="data-container">
                    <div style="width: 100%;">
                        <div class="data-user-info">
                            <span class="data-user-info-label">Nombre Completo:</span>
                            <p><%= user.first_name %></p>
                        </div>
                        <div class="data-user-info">
                            <span class="data-user-info-label">Correo Electronico:</span>
                            <p><%= user.email %></p>
                        </div>
                        <div class="data-user-info">
                            <span class="data-user-info-label">Celular:</span>
                            <p><%= user.phone %></p>
                        </div>
                        <div class="data-user-info">
                            <span class="data-user-info-label">Direcci√≥n:</span>
                            <p><%= user.address %></p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>

