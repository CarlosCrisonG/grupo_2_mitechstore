<%- include("../partials/head", { stylePag: "login" , title: "Login" }) %>

  <body>
    <!-- Header - Inicio -->
    <%- include("../partials/header") %>
      <!-- Header - Fin-->

      <main>

        <div class="contenedorh3">

          <h3>Iniciar sesión</h3>

        </div>

        <form class="form" action="/users/processLogin" method="POST">

          <input class="input" type="email" placeholder="Correo electrónico" name="email" value="<%= locals.oldData && oldData.email ? oldData.email : null %>">

          <input class="input" type="password" placeholder="Contraseña" name="password">

          <div class="contenedorOlvidaste">

            <a href="">¿Olvidaste tu contraseña? Haz click aquí</a>

          </div>

          <div class="contenedor-checkbox">
            <input id="recordarme" type="checkbox" class="checkbox" name="recordar?"> 
            <label for="recordarme">Recordarme</label>
          </div>

          <div class="contenedorButton">
            <button type="submit">Iniciar sesión</button>
          </div>

        </form>

        <div class="contenedorNoTienes">

          <a href="/users/register">¿No tienes una cuenta? Crea una aquí</a>

        </div>
      </main>

      <!-- Footer - Inicio -->
      <%- include("../partials/footer") %>
        <!-- Footer - Fin -->